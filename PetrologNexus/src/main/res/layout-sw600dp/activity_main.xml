<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"


             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             tools:context=".MainActivity"
             android:orientation="horizontal"
             android:id="@+id/Main"
             android:background="#e6e6e6"
             android:padding="8dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="100"
            android:id="@+id/Left"
            android:background="@android:color/transparent"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="100"
                android:id="@+id/CurrentAndRuntime"
                android:clickable="false"
                android:background="@android:color/transparent"
                android:baselineAligned="false"
                >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/Current"
                    android:layout_weight="100"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginRight="@dimen/frame_margin"
                    android:layout_marginBottom="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding"
                    >

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        >

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100"
                            android:id="@+id/current_R1"
                            >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/current_t1TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical|right"
                                android:text="@string/well_status"
                                android:textSize="@dimen/abc_text_size_subhead_material"
                                android:paddingRight="10dp"/>

                            <TextSwitcher
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/current_v1TV"
                                android:gravity="center_vertical"
                                android:layout_weight="300"
                                android:foregroundGravity="center_vertical|left">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/n_a"
                                    android:textSize="@dimen/abc_text_size_subhead_material"
                                    android:textColor="#FFCCCCCC"
                                    android:gravity="center_vertical|left"/>

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textSize="@dimen/text18sp"
                                    android:textColor="#FFCCCCCC"
                                    android:gravity="center_vertical|left"/>
                            </TextSwitcher>
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100"
                            android:id="@+id/current_R2">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/current_t2TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical|right"
                                android:paddingRight="10dp"
                                android:textSize="@dimen/abc_text_size_subhead_material"
                                android:text="@string/next_start"/>

                            <TextSwitcher
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/current_v2TV"
                                android:gravity="center_vertical"
                                android:layout_weight="300"
                                android:foregroundGravity="center_vertical|left">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/n_a"
                                    android:textSize="@dimen/abc_text_size_subhead_material"
                                    android:textColor="#FFCCCCCC"
                                    android:gravity="center_vertical|left"/>

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textSize="@dimen/text18sp"
                                    android:textColor="#FFCCCCCC"
                                    android:gravity="center_vertical|left"/>
                            </TextSwitcher>
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100"
                            android:id="@+id/current_R3">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/current_t3TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical|right"
                                android:paddingRight="10dp"
                                android:textSize="@dimen/abc_text_size_subhead_material"
                                android:text="@string/strokes_last"/>

                            <TextSwitcher
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/current_v3TV"
                                android:gravity="center_vertical"
                                android:layout_weight="300"
                                android:foregroundGravity="center_vertical|left">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/n_a"
                                    android:textSize="@dimen/abc_text_size_subhead_material"
                                    android:textColor="#FFCCCCCC"
                                    android:gravity="center_vertical|left"/>

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textSize="@dimen/text18sp"
                                    android:textColor="#FFCCCCCC"
                                    android:gravity="center_vertical|left"/>
                            </TextSwitcher>
                        </TableRow>

                    </TableLayout>
                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/Runtime"
                    android:layout_weight="125"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginBottom="@dimen/frame_margin"
                    android:layout_marginLeft="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding"
                    android:layout_marginRight="@dimen/frame_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_runtime"
                        android:id="@+id/textView2"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/abc_text_size_headline_material"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="100"
                        android:layout_gravity="bottom"
                        android:id="@+id/today">

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100">

                            <ProgressBar
                                android:id="@+id/runtime_today"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"/>


                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/desc_N_A"
                                android:id="@+id/today_runtime_percentTV"
                                android:gravity="center|center_vertical"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>
                        </FrameLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="50">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/desc_today_runtime"
                                android:id="@+id/labelTRP"
                                android:textAlignment="gravity"
                                android:gravity="center_vertical|right"
                                android:textSize="@dimen/abc_text_size_caption_material"
                                android:layout_weight="100"/>


                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/desc_N_A"
                                android:id="@+id/today_runtime_time"
                                android:layout_weight="70"
                                android:gravity="right"
                                android:textSize="@dimen/abc_text_size_title_material"/>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="100"
                        android:id="@+id/yesterday">

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100">

                            <ProgressBar
                                android:id="@+id/runtime_yesterday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/desc_N_A"
                                android:id="@+id/yesterday_runtime_percentTV"
                                android:gravity="center|center_vertical"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>
                        </FrameLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="50">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/labelYRP"
                                android:text="@string/desc_yesterday_runtime"
                                android:textSize="@dimen/abc_text_size_caption_material"
                                android:textAlignment="gravity"
                                android:layout_gravity="center"
                                android:gravity="center_vertical|right"
                                android:layout_weight="100"/>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/desc_N_A"
                                android:id="@+id/yesterday_runtime_time"
                                android:layout_weight="70"
                                android:gravity="right"
                                android:textSize="@dimen/abc_text_size_title_material"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/frame_margin"
                android:layout_marginRight="@dimen/frame_margin"
                android:background="@drawable/background_with_shadow"
                android:layout_weight="50"
                android:id="@+id/RuntimeTrend"
                android:padding="@dimen/frame_padding">

                <com.androidplot.xy.XYPlot
                    android:id="@+id/runtimeTrend"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    androidPlot.GraphWidget.BackgroundPaint.Color="#fffdfdfe"
                    androidPlot.GraphWidget.GridBackgroundPaint.Color="#fffdfdfe"
                    androidPlot.GraphWidget.DomainOriginLinePaint.Color="#ff000000"
                    androidPlot.GraphWidget.DomainOriginLablePaint.Color="#ff000000"
                    androidPlot.GraphWidget.RangeOriginLinePaint.Color="#ff000000"
                    androidPlot.GraphWidget.RangeOriginLablePaint.Color="#ff000000"
                    androidPlot.BackgroundPaint.Color="#fffdfdfe"
                    androidPlot.BorderStyle="Plot.BorderStyle.NONE|null|null"
                    androidPlot.PlotMargins="-40|-1|-1|-1"
                    androidPlot.PlotPadding="10|0|20|-10"
                    android:layout_weight="6"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="100"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="100">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/current_month_color"
                            android:background="#ff2128"
                            android:layout_weight="700"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/current_month"
                            android:id="@+id/current_month"
                            android:layout_weight="100"
                            android:textSize="@dimen/abc_text_size_caption_material"
                            android:gravity="center_vertical|center_horizontal"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="100"
                        android:layout_marginRight="@dimen/frame_margin"
                        android:layout_marginLeft="@dimen/frame_margin">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/today_color"
                            android:layout_weight="700"
                            android:background="#1527ff"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/today"
                            android:id="@+id/today"
                            android:layout_weight="100"
                            android:textSize="@dimen/abc_text_size_caption_material"
                            android:gravity="center_vertical|center_horizontal"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="100">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/last_month_color"
                            android:layout_weight="700"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/last_month"
                            android:id="@+id/last_month"
                            android:layout_weight="100"
                            android:textSize="@dimen/abc_text_size_caption_material"
                            android:gravity="center_vertical|center_horizontal"/>
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="100"
            android:id="@+id/Right"
            android:background="@android:color/transparent">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Dyna"
                android:layout_weight="50"
                android:background="@drawable/background_with_shadow"
                android:layout_marginBottom="@dimen/frame_margin"
                android:padding="@dimen/frame_padding"
                android:layout_marginLeft="@dimen/frame_margin">

                <com.androidplot.xy.XYPlot
                    android:id="@+id/dynagraph"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    androidPlot.GraphWidget.BackgroundPaint.Color="#fffdfdfe"
                    androidPlot.GraphWidget.GridBackgroundPaint.Color="#fffdfdfe"
                    androidPlot.GraphWidget.DomainOriginLabelPaint.Color="#ff000000"
                    androidPlot.GraphWidget.RangeOriginLabelPaint.Color="#ff000000"
                    androidPlot.BackgroundPaint.Color="#fffdfdfe"
                    androidPlot.BorderStyle="Plot.BorderStyle.NONE|null|null"
                    androidPlot.PlotMargins="-20|-1|-1|-1"
                    androidPlot.PlotPadding="1|1|20|0"
                    />

            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/SettingsAndFillage"
                android:layout_weight="100"
                android:background="@android:color/transparent">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/Settings"
                    android:layout_weight="80"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginTop="@dimen/frame_margin"
                    android:layout_marginRight="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding"
                    android:layout_marginLeft="@dimen/frame_margin">

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/tableLayout">

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100"
                            android:id="@+id/settings_R1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/pump_up_setting"
                                android:id="@+id/settings_t1TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical|right"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/n_a"
                                android:id="@+id/settings_v1TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical"
                                android:textColor="#FFCCCCCC"
                                android:paddingLeft="10dp"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100"
                            android:id="@+id/settings_R2">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/pump_off_setting"
                                android:id="@+id/settings_t2TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical|right"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/n_a"
                                android:id="@+id/settings_v2TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical"
                                android:textColor="#FFCCCCCC"
                                android:paddingLeft="10dp"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100"
                            android:id="@+id/settings_R4">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/timeout_setting"
                                android:id="@+id/settings_t4TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical|right"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/n_a"
                                android:id="@+id/settings_v4TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical"
                                android:textColor="#FFCCCCCC"
                                android:paddingLeft="10dp"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100"
                            android:id="@+id/settings_R5">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/auto_timeout_setting"
                                android:id="@+id/settings_t5TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical|right"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/n_a"
                                android:id="@+id/settings_v5TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical"
                                android:textColor="#FFCCCCCC"
                                android:paddingLeft="10dp"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>
                        </TableRow>

                    </TableLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/Fillage"
                    android:layout_weight="100"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginTop="@dimen/frame_margin"
                    android:layout_marginLeft="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding">

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/current_fillage"
                                android:id="@+id/fillage_t1TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical|right"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>

                            <TextSwitcher
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/n_a"
                                android:id="@+id/fillage_v1TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="10dp">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/n_a"
                                    android:textSize="@dimen/abc_text_size_body_1_material"
                                    android:textColor="#FFCCCCCC"
                                    android:gravity="center_vertical|left"/>

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textSize="@dimen/text18sp"
                                    android:textColor="#FFCCCCCC"/>
                            </TextSwitcher>
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/percent_fillage_setting"
                                android:id="@+id/fillage_t2TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical|right"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/n_a"
                                android:id="@+id/fillage_v2TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="10dp"
                                android:textSize="@dimen/abc_text_size_body_1_material"
                                android:textColor="#FFCCCCCC"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/pump_off_distance"
                                android:id="@+id/fillage_t3TV"
                                android:layout_weight="110"
                                android:gravity="center_vertical|right"
                                android:textSize="@dimen/abc_text_size_body_1_material"/>

                            <TextSwitcher
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/n_a"
                                android:id="@+id/fillage_v3TV"
                                android:layout_weight="100"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="10dp"
                                android:textAlignment="gravity">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/n_a"
                                    android:textSize="@dimen/abc_text_size_body_1_material"
                                    android:textColor="#FFCCCCCC"
                                    android:gravity="center_vertical|left"/>

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textSize="@dimen/text18sp"
                                    android:textColor="#FFCCCCCC"
                                    android:gravity="center_vertical|left"/>
                            </TextSwitcher>
                        </TableRow>
                    </TableLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:focusableInTouchMode="false"
        android:visibility="invisible"
        tools:visibility="gone"
        android:background="@android:color/darker_gray"
        android:focusable="false"
        android:id="@+id/wait"
        android:alpha=".7"
        android:layout_gravity="center_vertical"
        >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:background="@android:color/transparent"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/Help"
        tools:visibility="gone"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="100"
            android:id="@+id/LeftH"
            android:background="@android:color/transparent"
            android:alpha=".8">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="100"
                android:id="@+id/CurrentAndRuntimeH"
                android:clickable="false"
                android:background="@android:color/transparent"
                android:baselineAligned="false"
                >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/CurrentH"
                    android:layout_weight="100"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginRight="@dimen/frame_margin"
                    android:layout_marginBottom="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/current_h_s"
                        android:id="@+id/current_h"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textSize="@dimen/text15sp"
                        />
                </FrameLayout>

                <FrameLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/RuntimeH"
                    android:layout_weight="125"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginBottom="@dimen/frame_margin"
                    android:layout_marginLeft="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding"
                    android:layout_marginRight="@dimen/frame_margin">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/runtime_h_s"
                        android:id="@+id/runtime_h"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textSize="@dimen/text15sp"
                        />
                </FrameLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:id="@+id/RuntimeTrendH"
                android:background="@drawable/background_with_shadow"
                android:layout_marginTop="@dimen/frame_margin"
                android:padding="0dp"
                android:layout_marginRight="@dimen/frame_margin"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/runtime_trend_h_s"
                    android:id="@+id/runtime_trend_h"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:textSize="@dimen/text15sp"
                    />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="100"
            android:id="@+id/RightH"
            android:background="@android:color/transparent"
            android:alpha=".8">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/DynaH"
                android:layout_weight="50"
                android:background="@drawable/background_with_shadow"
                android:layout_marginBottom="@dimen/frame_margin"
                android:layout_marginLeft="@dimen/frame_margin">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="100">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/help_disconnectedIV"
                            android:src="@drawable/help_disconnected"
                            android:visibility="visible"/>

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/help_connected_stoppedIV"
                            android:src="@drawable/help_connected_stopped"
                            android:visibility="invisible"
                            android:cropToPadding="false"/>

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/help_connected_runningIV"
                            android:src="@drawable/help_connected_running"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/dyna_h_s"
                        android:id="@+id/dyna_h"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textSize="@dimen/text15sp"
                        android:layout_weight="100"/>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/SettingsAndFillageH"
                android:layout_weight="100"
                android:background="@android:color/transparent">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/SettingsH"
                    android:layout_weight="100"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginTop="@dimen/frame_margin"
                    android:layout_marginRight="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding"
                    android:layout_marginLeft="@dimen/frame_margin">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/settings_h_s"
                        android:id="@+id/settings_h"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textSize="@dimen/text15sp"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/FillageH"
                    android:layout_weight="100"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginTop="@dimen/frame_margin"
                    android:layout_marginLeft="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/fillage_h_s"
                        android:id="@+id/fillage_h"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textSize="@dimen/text15sp"
                        />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
