<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="us.petrolog.nexus.ui.AttentionListFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="18dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/list_name"
                android:textColor="@color/abc_primary_text_material_light"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/list_problem"
                android:textColor="@color/abc_primary_text_material_light"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/list_group"
                android:textColor="@color/abc_primary_text_material_light"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/list_location"
                android:textColor="@color/abc_primary_text_material_light"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/list_last_update"
                android:textColor="@color/abc_primary_text_material_light"/>

        </LinearLayout>

        <us.petrolog.nexus.misc.EmptyRecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:fadeScrollbars="false"
            android:scrollbars="vertical"/>

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarAttention"
        android:indeterminate="true"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>
</FrameLayout>
