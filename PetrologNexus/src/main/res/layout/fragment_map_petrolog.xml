<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/map"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonSwitchToSatellite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:src="@drawable/ic_satellite_white_24dp"
        android:elevation="4dp"
        app:rippleColor="@color/grey_400"
        app:backgroundTint="@color/colorPrimary"

        android:layout_above="@+id/buttonFocusOnDevices"
        android:layout_alignLeft="@+id/buttonFocusOnDevices"
        android:layout_alignStart="@+id/buttonFocusOnDevices"
        android:layout_marginBottom="8dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonFocusOnDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:src="@drawable/ic_pin_drop_black_24dp"
        android:elevation="4dp"
        app:rippleColor="@color/grey_400"
        app:backgroundTint="@color/colorPrimary"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="16dp"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonGoToDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:src="@drawable/ic_forward_white_24dp"
        android:elevation="4dp"
        app:rippleColor="@color/grey_400"
        app:backgroundTint="@color/colorPrimary"

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"/>
</RelativeLayout>