
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circular_p_b="http://schemas.android.com/apk/res/com.petrologautomation.petrolognexus"


    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:id="@+id/Main"
    android:background="#e6e6e6">


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="100"
                android:id="@+id/Left"
                android:background="@android:color/transparent"
                >

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="100"
                    android:id="@+id/CurrentAndRuntime"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    android:baselineAligned="false"
                    >

                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/Current"
                        android:layout_weight="100"
                        android:background="@drawable/background_with_shadow"
                        android:layout_marginRight="@dimen/frame_margin"
                        android:layout_marginBottom="@dimen/frame_margin"
                        android:padding="@dimen/frame_padding"
                        >

                    <TableLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            >

                        <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="100"
                                android:id="@+id/current_R1"
                                >

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/current_t1TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"
                                    android:text="@string/well_status"
                                    android:textSize="16dp"
                                    android:paddingRight="10dp"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/current_v1TV"
                                    android:layout_weight="300"
                                    android:gravity="center_vertical"
                                    android:text="@string/n_a"
                                    android:textSize="18dp"
                                    android:textColor="#b8b8b8"/>
                        </TableRow>

                        <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="100"
                                android:id="@+id/current_R2">

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/current_t2TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="10dp"
                                    android:textSize="16dp"
                                    android:text="@string/next_start"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/current_v2TV"
                                    android:layout_weight="300"
                                    android:gravity="center_vertical"
                                    android:textSize="18dp"
                                    android:text="@string/n_a"
                                    android:textColor="#b8b8b8"/>
                        </TableRow>

                        <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="100"
                                android:id="@+id/current_R3">

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/current_t3TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="10dp"
                                    android:textSize="16dp"
                                    android:text="@string/strokes_last"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/current_v3TV"
                                    android:layout_weight="300"
                                    android:gravity="center_vertical"
                                    android:textSize="18dp"
                                    android:text="@string/n_a"
                                    android:textColor="#b8b8b8"/>
                        </TableRow>

                    </TableLayout>
                </FrameLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/Runtime"
                        android:layout_weight="125"
                        android:background="@drawable/background_with_shadow"
                        android:layout_marginBottom="@dimen/frame_margin"
                        android:layout_marginLeft="@dimen/frame_margin"
                        android:padding="@dimen/frame_padding"
                        android:layout_marginRight="@dimen/frame_margin">

                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100"
                            android:layout_gravity="bottom"
                            android:id="@+id/today">
                        <FrameLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="100">

                            <de.passsy.holocircularprogressbar.HoloCircularProgressBar
                                    android:id="@+id/runtime_today"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    circular_p_b:progress_color="@android:color/holo_blue_dark"
                                    circular_p_b:gravity="left"
                                    circular_p_b:progress=".25"
                                    circular_p_b:progress_background_color="#cccccc"
                                    circular_p_b:stroke_width="4dp"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="46%"
                                    android:id="@+id/today_runtime_percentTV"
                                    android:gravity="center|center_vertical"/>
                        </FrameLayout>

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="50">

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="Today's Runtime:"
                                    android:id="@+id/labelYRP"
                                    android:textAlignment="gravity"
                                    android:gravity="center_vertical|right"
                                    android:textSize="13dp"
                                    android:layout_weight="100"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="00:00:00"
                                    android:id="@+id/today_runtime_time"
                                    android:layout_weight="70"
                                    android:gravity="right"/>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="100"
                            android:id="@+id/yesterday">

                        <FrameLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="100">

                            <de.passsy.holocircularprogressbar.HoloCircularProgressBar
                                    android:id="@+id/runtime_yesterday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    circular_p_b:progress_color="@android:color/holo_blue_dark"
                                    circular_p_b:gravity="left"
                                    circular_p_b:progress=".25"
                                    circular_p_b:progress_background_color="#cccccc"
                                    circular_p_b:stroke_width="4dp"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="46%"
                                    android:id="@+id/yesterday_runtime_percentTV"
                                    android:gravity="center|center_vertical"/>
                        </FrameLayout>

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="50">

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/labelYRP"
                                    android:text="Yesterday's Runtime:"
                                    android:textSize="13dp"
                                    android:textAlignment="gravity"
                                    android:layout_gravity="center"
                                    android:gravity="center_vertical|right"
                                    android:layout_weight="100"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="00:00:00"
                                    android:id="@+id/yesterday_runtime_time"
                                    android:layout_weight="70"
                                    android:gravity="right"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="100"
                    android:id="@+id/RuntimeTrend"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginBottom="@dimen/frame_margin"
                    android:layout_marginTop="@dimen/frame_margin"
                    android:padding="0dp"
                    android:layout_marginRight="@dimen/frame_margin">

                <com.androidplot.xy.XYPlot
                        android:id="@+id/runtimeTrend"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        androidPlot.GraphWidget.BackgroundPaint.Color="#fffdfdfe"
                        androidPlot.GraphWidget.GridBackgroundPaint.Color="#fffdfdfe"
                        androidPlot.GraphWidget.DomainOriginLinePaint.Color="#ff000000"
                        androidPlot.GraphWidget.DomainOriginLablePaint.Color="#ff000000"
                        androidPlot.GraphWidget.RangeOriginLinePaint.Color="#ff000000"
                        androidPlot.GraphWidget.RangeOriginLablePaint.Color="#ff000000"
                        androidPlot.BackgroundPaint.Color="#fffdfdfe"
                        androidPlot.BorderStyle="Plot.BorderStyle.NONE|null|null"
                        androidPlot.PlotMargins="-20|0|0|0"
                        androidPlot.PlotPadding="0|0|20|0"
                        />

            </FrameLayout>

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="65"
                    android:id="@+id/Map"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginTop="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding"
                    android:layout_marginRight="@dimen/frame_margin">

                <include
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/include"
                        layout="@layout/map_fragment"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="100"
                android:id="@+id/Right"
                android:background="@android:color/transparent">

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/Dyna"
                    android:layout_weight="50"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginBottom="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding"
                    android:layout_marginLeft="@dimen/frame_margin">

                <com.androidplot.xy.XYPlot
                        android:id="@+id/dynagraph"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        androidPlot.GraphWidget.BackgroundPaint.Color="#fffdfdfe"
                        androidPlot.GraphWidget.GridBackgroundPaint.Color="#fffdfdfe"
                        androidPlot.GraphWidget.DomainOriginLinePaint.Color="#ff000000"
                        androidPlot.GraphWidget.DomainOriginLablePaint.Color="#ff000000"
                        androidPlot.GraphWidget.RangeOriginLinePaint.Color="#ff000000"
                        androidPlot.GraphWidget.RangeOriginLablePaint.Color="#ff000000"
                        androidPlot.BackgroundPaint.Color="#fffdfdfe"
                        androidPlot.BorderStyle="Plot.BorderStyle.NONE|null|null"
                        androidPlot.PlotMargins="-20|-1|0|0"
                        androidPlot.PlotPadding="0|0|20|0"
                        />

            </FrameLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/SettingsAndFillage"
                    android:layout_weight="100"
                    android:background="@android:color/transparent">

                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/Settings"
                        android:layout_weight="100"
                        android:background="@drawable/background_with_shadow"
                        android:layout_marginTop="@dimen/frame_margin"
                        android:layout_marginRight="@dimen/frame_margin"
                        android:padding="@dimen/frame_padding"
                        android:layout_marginLeft="@dimen/frame_margin">

                    <TableLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/tableLayout">

                        <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="100"
                                android:id="@+id/settings_R1">

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/pump_up_setting"
                                    android:id="@+id/settings_t1TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="5dp"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/n_a"
                                    android:id="@+id/settings_v1TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical"/>
                        </TableRow>

                        <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="100"
                                android:id="@+id/settings_R2">

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/pump_off_setting"
                                    android:id="@+id/settings_t2TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="5dp"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/n_a"
                                    android:id="@+id/settings_v2TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical"/>
                        </TableRow>

                        <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="100"
                                android:id="@+id/settings_R3">

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/fillage_setting"
                                    android:id="@+id/settings_t3TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="5dp"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/n_a"
                                    android:id="@+id/settings_v3TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical"/>
                        </TableRow>

                        <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="100"
                                android:id="@+id/settings_R4">

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/timeout_setting"
                                    android:id="@+id/settings_t4TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="5dp"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/n_a"
                                    android:id="@+id/settings_v4TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical"/>
                        </TableRow>

                        <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="100"
                                android:id="@+id/settings_R5">

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/auto_timeout_setting"
                                    android:id="@+id/settings_t5TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="5dp"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="@string/n_a"
                                    android:id="@+id/settings_v5TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical"/>
                        </TableRow>

                    </TableLayout>

                </FrameLayout>

                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/Fillage"
                        android:layout_weight="100"
                        android:background="@drawable/background_with_shadow"
                        android:layout_marginTop="@dimen/frame_margin"
                        android:layout_marginLeft="@dimen/frame_margin"
                        android:padding="@dimen/frame_padding">

                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            >

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="75">

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="@string/current_fillage"
                                    android:id="@+id/fillage_t1TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/n_a"
                                    android:id="@+id/fillage_v1TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="@string/fillage_setting"
                                    android:id="@+id/fillage_t2TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/n_a"
                                    android:id="@+id/fillage_v2TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="@string/pump_off_distance"
                                    android:id="@+id/fillage_t3TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"/>

                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/n_a"
                                    android:id="@+id/fillage_v3TV"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical|right"/>

                        </LinearLayout>

                        <ProgressBar
                                android:id="@+id/tank"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                style="@style/Widget.ProgressBar.Vertical"
                                android:progress="50"
                                android:background="@android:color/transparent"
                                android:clickable="false"
                                android:layout_gravity="center"
                                android:indeterminate="false"
                                android:layout_weight="100"
                                android:paddingLeft="10dp"/>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:focusableInTouchMode="false"
            android:visibility="invisible"
            android:background="@android:color/darker_gray"
            android:focusable="false"
            android:id="@+id/waiting_bt_cx"
            android:alpha=".7"
            android:layout_gravity="center_vertical"
            >

        <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_gravity="center"
                android:background="@android:color/transparent"/>

    </FrameLayout>

</FrameLayout>