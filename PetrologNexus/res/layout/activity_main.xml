<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"



    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:id="@+id/Main"
    android:background="#e6e6e6">


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="100"
                android:id="@+id/Left"
                android:background="@android:color/transparent"
                >

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="100"
                    android:id="@+id/CurrentAndRuntime"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    android:baselineAligned="false"
                    >

                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/Current"
                        android:layout_weight="100"
                        android:background="@drawable/background_with_shadow"
                        android:layout_marginRight="@dimen/frame_margin"
                        android:layout_marginBottom="@dimen/frame_margin"
                        android:padding="@dimen/frame_padding">

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="New Text"
                            android:id="@+id/Current"
                            android:layout_weight="100"
                            android:layout_gravity="center"
                            />
                </FrameLayout>

                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/Runtime"
                        android:layout_weight="100"
                        android:background="@drawable/background_with_shadow"
                        android:layout_marginBottom="@dimen/frame_margin"
                        android:layout_marginLeft="@dimen/frame_margin"
                        android:padding="@dimen/frame_padding"
                        android:layout_marginRight="@dimen/frame_margin">

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="New Text"
                            android:id="@+id/Runtime"
                            android:layout_weight="100"
                            />
                </FrameLayout>

            </LinearLayout>

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="100"
                    android:id="@+id/RuntimeTrend"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginBottom="@dimen/frame_margin"
                    android:layout_marginTop="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding"
                    android:layout_marginRight="@dimen/frame_margin">

                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/RuntimeTrend"
                        android:layout_weight="100"
                        android:background="@drawable/trend"
                        />
            </FrameLayout>

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="65"
                    android:id="@+id/Map"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginTop="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding"
                    android:layout_marginRight="@dimen/frame_margin">

                <include
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/include"
                        layout="@layout/map_fragment"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="100"
                android:id="@+id/Right"
                android:background="@android:color/transparent">

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/Dyna"
                    android:layout_weight="50"
                    android:background="@drawable/background_with_shadow"
                    android:layout_marginBottom="@dimen/frame_margin"
                    android:padding="@dimen/frame_padding"
                    android:layout_marginLeft="@dimen/frame_margin">

                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/Dyna"
                        android:layout_weight="50"
                        android:background="@drawable/dyna"
                        android:adjustViewBounds="false"/>
            </FrameLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/SettingsAndFillage"
                    android:layout_weight="100"
                    android:background="@android:color/transparent">

                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/Settings"
                        android:layout_weight="100"
                        android:background="@drawable/background_with_shadow"
                        android:layout_marginTop="@dimen/frame_margin"
                        android:layout_marginRight="@dimen/frame_margin"
                        android:padding="@dimen/frame_padding"
                        android:layout_marginLeft="@dimen/frame_margin">

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="New Text"
                            android:id="@+id/Settings"
                            android:layout_weight="100"
                            />
                </FrameLayout>

                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/Fillage"
                        android:layout_weight="100"
                        android:background="@drawable/background_with_shadow"
                        android:layout_marginTop="@dimen/frame_margin"
                        android:layout_marginLeft="@dimen/frame_margin"
                        android:padding="@dimen/frame_padding">

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="New Text"
                            android:id="@+id/Fillage"
                            android:layout_weight="100"
                            />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:focusableInTouchMode="false"
            android:visibility="invisible"
            android:background="@android:color/darker_gray"
            android:focusable="true"
            android:alpha=".5"
            android:id="@+id/waiting_bt_cx">

        <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_gravity="center"/>

    </FrameLayout>

</FrameLayout>